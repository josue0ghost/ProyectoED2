@{
    ViewBag.Title = "Home Page";
}


<h2>Configuración del sistema de inventario</h2>

<div>

    @using (Html.BeginForm("setKey", "Home"))
    {
        <p>Clave de cifrado</p>
        <input type="password" name="key" class="form-control" />

        <br />
        <input type="submit" value="Ingresar" class="btn btn-default" />
    }

</div>
<br />
<br />

<h2>Exportar base de datos</h2>

<div>

    @using (Html.BeginForm("compress", "Home"))
    {
        <div>Sucursales @Html.CheckBox("sucursales")</div>
        <div>Productos @Html.CheckBox("productos")</div>
        <div>Sucursal-Producto @Html.CheckBox("admin")</div>

        <br />
        <input type="submit" value="Exportar" class="btn btn-default" />
    }

</div>
<br />
<br />

<h2>Importar base de datos</h2>

<div>
    @using (Html.BeginForm("decompress", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <input type="file" name="file" class="form-control" />
        <br />
        <input type="submit" value="Importar" class="btn btn-default" />
    }
</div>